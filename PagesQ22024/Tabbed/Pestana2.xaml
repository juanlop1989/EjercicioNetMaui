<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PagesQ22024.Tabbed.Pestana2"
             Title="Área del cuadrado">
    <VerticalStackLayout Spacing="10" Padding="40">
        <Label Text="Ingrese un número para calcular área de un cuadrado" FontAttributes="Bold" />
        <Entry x:Name="txtN1" Keyboard="Numeric" Placeholder="Ingrese un número" />


        <Label Text="Resultado" FontAttributes="Bold" />
        <Entry x:Name="txtResultado" IsReadOnly="True" />

        <Button x:Name="btnCalcular" Text="Calcular" Clicked="btnCalcular_Clicked" Background="Green" />
        <Button x:Name="btnLimpiar" Text="Limpiar" Clicked="btnLimpiar_Clicked" Background="red" />
    </VerticalStackLayout>
</ContentPage>